{% extends "AcmeWebUIBundle::layouts/accountbase.html.twig" %}

{% block content %}

  <div class="admin-content">
        <div class="am-cf am-padding">
          <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">添加课程</strong> 
          </div>
        </div>

	      <div class="admin-content">
            <div class="am-g">
               <div class="am-u-sm-12 am-u-md-4 am-u-md-push-8">
               </div>

      <div class="am-u-sm-12 am-u-md-8 am-u-md-pull-4">
        <form class="am-form am-form-horizontal">
          <div class="am-form-group">
            <label for="user-name" class="am-u-sm-3 am-form-label">课程名 / Class</label>
            <div class="am-u-sm-9">
              <input type="text" id="user-name" name=" class" placeholder="课程名 / Class">
              <small>输入课程的名字</small>
          </div>
      </div>
		  
        <div class="am-form-group">
            <label for="user-email" class="am-u-sm-3 am-form-label">照片 / Photo</label>
            <div class="am-u-sm-9">
              <input type="file" id="user-email" name="photo" placeholder="添加照片" / Photo">
              <small>添加一张描述本课程的照片</small>
            </div>
        </div>
		  
          <div class="am-form-group">
            <div class="am-u-sm-9 am-u-sm-push-3">
              <button type="button" class="am-btn am-btn-primary">添加</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

{% endblock %}