{% extends "AcmeWebUIBundle::layouts/accountbase.html.twig" %}
{% block content %}

   <div class="admin-content">
        <div class="am-cf am-padding">
          <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">Group表</strong></div>
        </div>
    <table border=1 class="bor" style="margin-left:10px;"> 
             <tr>
                <th></th>         
                <th>ID</th>
                <th>name</th>
                <th>roles</th>
                <th>操作</th>
             </tr>

          {% for group in groups %}
       
	           <tr> 
	             <td>
	               <input type="checkbox" style="width:15px;height:15px;">
	             </td>
	             <td>{{ group.id }}</td>
	             <td>{{ group.name }}</td> 
               <td>{{ group.roles }}</td>
               <td></td>
	           </tr>

          {% endfor %}

         </table>

{% endblock %}
