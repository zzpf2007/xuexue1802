<!DOCTYPE html>
<html>
<head>
   <meta charset="utf8">
   <title></title>
   <link rel="stylesheet" href="/assets/css/pc/style.css" />
   <link rel="stylesheet" href="/assets/css/pc/cui.css" />
   <link rel="stylesheet" href="/assets/css/pc/lib.css" />
   <link rel="stylesheet" href="/assets/css/pc/style.css" />
   <link rel="stylesheet" href="/assets/css/pc/amazeui.css" />
   <link rel="stylesheet" href="/assets/css/pc/admin.css" />
</head>
<body>
        

         <table border=1 class="bor2"> 
             <tr>
                <h2 class="topp">教师列表</h2> 

                <div class="searchh">
                  <form action="{{ path('teacher_search_path')}}" method="post">
                     <input type="text" class="textt" name="name" placeholder="请输入要搜索的教师...">
                     <input type="submit" class="submitt" value="搜索">
                  </form>
                </div>

             </tr>

            <tr>
                <th></th>         
                <th>ID</th>
                <th>name</th>
                <th>major</th>
                <th>photo</th>
                <th>操作</th>
             </tr>  
              {% for teacher in pagination %}        
         
                 <tr> 
                    <th>
                       <input type="checkbox" style="width:15px;height:15px;">
                    </th>
                    <td>{{ teacher.id }}</td>
                    <td>{{ teacher.name }}</td>
                    <td>{{ teacher.major }}</td>
                    <td>{{ teacher.photo }}</td>
                    <td>
                      <a href="{{ path('teacher_edit_path', { id : teacher.id })}}">
                      <img src="/assets/images/pc/8.png" style="width:17px;height:17px;">修改</a> <br>
                      <img src="/assets/images/pc/13.png" style="width:17px;height:17px;margin-top:5px;">
                      <div class="del">
                        {{ form_start( delete_form, {'action': path( 'teacher_delete_path', {'id' : teacher.id})}) }}                    
                        {{ form_widget( delete_form ) }}  
                             <input type="submit" style="margin-left:-65px;margin-top:11px;background:#DDDDDD;border:#DDDDDD;" value="删除" />
                        {{ form_end(delete_form) }}
                      </div>
                    </td>
          
                 </tr>
    
              {% endfor %}
                 <tr>
                  <td colspan="8">
                     {{ knp_pagination_render(pagination) }} 
                   </td>
                 </tr>
         </table>

</body>
</html>